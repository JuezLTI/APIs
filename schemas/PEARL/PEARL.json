{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://juezlti.eu/PEARL",
    "title": "PERL Schema",
    "description": "A schema for PEARL - the Programming Exercise Assessment Reporting Language ",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "https://juezlti.eu/Common#/definitions/nonNegativeInteger"
        },
        "date": {
            "$ref": "https://juezlti.eu/Common#/definitions/dateTime"
        },
        "request": {
            "$ref": "https://juezlti.eu/PEARL_REQUEST#/"
        },
        "reply": {
            "$ref": "https://juezlti.eu/PEARL_REPLY#/"
        }
    },
    "required": [
        "request"
    ]
}
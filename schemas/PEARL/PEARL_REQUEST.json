{
    "$id": "https://juezlti.eu/PEARL_REQUEST",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PERL Request Schema",
    "description": "A schema for PEARL REQUEST ",
    "type": "object",
    "definitions": {
        "request": {
            "$id": "/Request",
            "description": "Information about the client that doesn't influence the evaluation.",
            "type": "object",
            "allOf": [{
                    "properties": {
                        "date": {
                            "$ref": "https://juezlti.eu/Common#/definitions/dateTime"
                        }
                    }
                },
                {
                    "anyOf": [{
                            "properties": {
                                "program": {
                                    "type": "string"
                                },
                                "learningObject": {
                                    "$ref": "https://juezlti.eu/Common#/definitions/anyUri"
                                }
                            },
                            "required": [
                                "program",
                                "learningObject"
                            ]
                        },
                        {
                            "properties": {
                                "token": {
                                    "$ref": "https://juezlti.eu/Common#/definitions/token"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}